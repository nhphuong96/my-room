<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".activity.CreateRoomActivity">

    <include
        layout="@layout/toolbar"
        android:id="@+id/toolbar"
        ></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông tin khách phòng"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Tên phòng : "
                    android:fontFamily="sans-serif-medium"
                    />

                <EditText
                    android:id="@+id/create_room_name"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Phòng 1"
                    android:inputType="text"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Tên khách : "
                    android:fontFamily="sans-serif-medium"
                    />

                <EditText
                    android:id="@+id/create_guest_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Trung"
                    android:layout_weight="3"
                    android:textSize="14sp"
                    android:inputType="text"
                    android:fontFamily="sans-serif-medium"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:text="Giới tính : "
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    />

                <RadioGroup
                    android:id="@+id/radioButton_gender"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radioButton_male"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Nam"
                        />

                    <RadioButton
                        android:id="@+id/radioButton_female"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Nữ"
                        />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Ngày sinh : "
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    />

                <EditText
                    android:id="@+id/create_guest_birthdate"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:hint="02/07/1964"
                    android:textSize="14sp"
                    android:inputType="date"
                    android:fontFamily="sans-serif-medium"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Số CMND : "
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    />

                <EditText
                    android:id="@+id/create_guest_id_card"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="123456789"
                    android:textSize="14sp"
                    android:inputType="number"
                    android:fontFamily="sans-serif-medium"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Số ĐT: "
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    />

                <EditText
                    android:id="@+id/create_guest_phone_number"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:hint="0902.444.505"
                    android:textSize="14sp"
                    android:inputType="phone"
                    android:fontFamily="sans-serif-medium"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn tiện ích trong phòng"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/create_room_utility_list"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:layout_height="wrap_content"
            >

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/create_room_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tạo phòng"
            android:textSize="13dp"
            android:textAllCaps="false"
            android:theme="@style/ButtonTheme"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center"
            />

    </LinearLayout>



</LinearLayout>