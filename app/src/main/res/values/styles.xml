<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/actionBarBackground</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#fff</item>
    </style>
    
    <style name="ButtonTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#2778f9</item>
        <item name="colorButtonNormal">@color/btnRoomCreationSubmit</item>
    </style>

</resources>
